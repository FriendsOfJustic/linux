<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rsgisai.geohazard.subsystem.dao.pgsql.LegendDao">
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        insert into legend(name, value, label, rgb, type)
        values (
                #{name},
                #{value},
                #{label},
                #{rgb},
                #{type}
               )
    </insert>

    <select id="select" resultType="com.rsgisai.geohazard.system.common.entity.Legend">
        select *
        from legend
        <where>
            <if test="name != null and name != ''">
                AND name = #{name}
            </if>
            <if test="value != null and value != ''">
                AND value = #{value}
            </if>
            <if test="label != null and label != ''">
                AND label = #{label}
            </if>
            <if test="rgb != null and rgb != ''">
                AND rgb = #{rgb}
            </if>
        </where>
    </select>
</mapper>
