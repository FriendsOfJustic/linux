<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rsgisai.geohazard.auth.dao.UserInfoDao" >
    <select id="selectByUsername" resultType="com.rsgisai.geohazard.system.common.UserInfo">
        select *
        from geohazard.user_info
        where username = #{username}
    </select>
</mapper>
